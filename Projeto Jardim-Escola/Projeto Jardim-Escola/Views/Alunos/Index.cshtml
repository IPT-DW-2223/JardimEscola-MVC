@model IEnumerable<Projeto_Jardim_Escola.Models.Alunos>

@{
    ViewData["Title"] = "Alunos";
}

<h3>Lista de alunos da escola</h3>
@*<hr />*@
<br />

@if(User.IsInRole("Admin")) {
    <a asp-controller="Alunos" asp-action="Create" type="submit" class="btn btn-primary btn-sm">Adicionar aluno</a>
    @*<hr />*@
    <div><br /></div>
}

@*<table class="table table-hover table-bordered border-primary table-striped">*@
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                Responsável
                @*@Html.DisplayNameFor(model => model.Responsavel)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoIdentificacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Identificacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NIF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataNascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Responsavel.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoIdentificacao.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Identificacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NIF)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Foto)
                </td>
                <td>
                    <a class="btn btn-warning btn-sm btn-outline-light" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-info btn-sm btn-outline-light" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                    <a class="btn btn-danger btn-sm btn-outline-light" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
