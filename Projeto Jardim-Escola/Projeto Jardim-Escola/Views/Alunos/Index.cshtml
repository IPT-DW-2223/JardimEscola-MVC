@model IEnumerable<Projeto_Jardim_Escola.Models.Alunos>

@{
    ViewData["Title"] = "Alunos";
}

<h3>Lista de alunos da escola</h3>
@*<hr />*@
<br />

@if(User.IsInRole("Admin")) {
    <a asp-controller="Alunos" asp-action="Create" type="submit" class="btn btn-primary btn-sm">Adicionar aluno</a>
    @*<hr />*@
    <div><br /></div>
}

@*<table class="table table-hover table-bordered border-primary table-striped">*@
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoIdentificacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Identificacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NIF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
                Responsável
                @*@Html.DisplayNameFor(model => model.Responsavel)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Avaliacao)
            </th>
            <th></th>
        </tr>
    </thead>
    @if (User.IsInRole("Administrador")) {
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataNascimento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoIdentificacao.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Identificacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NIF)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genero)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.Foto)*@
                        @if (string.IsNullOrEmpty(item.Foto)) {
                            @*@Html.DisplayFor(modelItem => item.Foto)*@
                            <a>
                                <img src="~/Fotos/@item.Foto" alt="Foto do aluno @Html.DisplayFor(modelItem => item.Foto)"
                                     title="@item.Nome" height="50" />
                            </a>
                        } else {
                            @*@Html.DisplayFor(modelItem => item.Foto)*@
                            <img src="~/Fotos/@item.Foto" alt="Foto do aluno: @Html.DisplayFor(modelItem => item.Foto)"
                                 title="@item.Nome" height="50" />
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Responsavel.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ativo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Avaliacao)
                    </td>
                    <td>
                    </td>
       
                </tr>
            }
        </tbody>
    } else {
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataNascimento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoIdentificacao.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Identificacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NIF)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genero)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.Foto)*@
                        @if (string.IsNullOrEmpty(item.Foto)) {
                            @*@Html.DisplayFor(modelItem => item.Foto)*@
                            <a>
                                <img src="~/Fotos/@item.Foto" alt="Foto do aluno @Html.DisplayFor(modelItem => item.Foto)"
                                     title="@item.Nome" height="50" />
                            </a>
                        } else {
                            @*@Html.DisplayFor(modelItem => item.Foto)*@
                            <img src="~/Fotos/@item.Foto" alt="Foto do aluno: @Html.DisplayFor(modelItem => item.Foto)"
                                 title="@item.Nome" height="50" />
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Responsavel.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ativo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Avaliacao)
                    </td>
                    <td>
                        @if (User.IsInRole("Admin") || User.IsInRole("Professor")) {
                            <a class="btn btn-warning btn-sm btn-outline-light" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        }
                        <a class="btn btn-info btn-sm btn-outline-light" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                        @if (User.IsInRole("Admin")) {
                            <a class="btn btn-danger btn-sm btn-outline-light" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                        }
                    </td>

                </tr>
            }
        </tbody>
    }

</table>
