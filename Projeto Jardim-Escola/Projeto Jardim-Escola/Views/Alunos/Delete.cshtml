@model Projeto_Jardim_Escola.Models.Alunos

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>Tem a certeza que deseja eliminar este registo?</h3>
<div>
    <h4>Aluno</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataNascimento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoIdentificacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoIdentificacao.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Identificacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Identificacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NIF)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NIF)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genero)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genero)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd class="col-sm-10">
            @*@Html.DisplayFor(model => model.Foto)*@
            <img src="~/Fotos/@Model.Foto"
                 alt="Foto do @Model.Nome"
                 title="@Model.Nome"
                 height="100" />
        </dd>
        <dt class = "col-sm-2">
            Responsável
            @*@Html.DisplayNameFor(model => model.Responsavel)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Responsavel.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
