@model Projeto_Jardim_Escola.Models.Turmas

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Turmas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnoLetivoFK" class="control-label"></label>
                <select asp-for="AnoLetivoFK" class="form-control" asp-items="ViewBag.AnoLetivoFK"></select>
                <span asp-validation-for="AnoLetivoFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfessorFK" class="control-label"></label>
                <select asp-for="ProfessorFK" class="form-control" asp-items="ViewBag.ProfessorFK"></select>
                <span asp-validation-for="ProfessorFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar alterações" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
