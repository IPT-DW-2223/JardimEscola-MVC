@model Projeto_Jardim_Escola.Models.Turmas

@{
    ViewData["Title"] = "Adicionar";
}

<h1>Adicionar turma</h1>

<h4>TURMA</h4>
<hr />
<div class="row">
    <div class="col-md-4">  
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnoLetivoFK" class="control-label"></label>
                <select asp-for="AnoLetivoFK" id="anoLetivo" class="form-control" asp-items="ViewBag.AnoLetivoFK">
                    <option value="0">--- Escolha o ano letivo ---</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ProfessorFK" class="control-label"></label>
                <select asp-for="ProfessorFK" class ="form-control" asp-items="ViewBag.ProfessorFK"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>        
    <!-- --- --- --- --- -->  
    <div class="col-md-8">
        <label>Escolha os alunos a associar à turma:</label>
        <table class="table" id="tabelaAlunos">
            <thead>
                <tr>
                    <th>Associar</th>
                    <th>Nome do Aluno</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>  
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            $('#anoLetivo').change(function () {
                var anoLetivo = $(this).val();

                $.ajax({
                    url: '/Turmas/GetListaAlunos',
                    type: 'GET',
                    dataType: 'json',
                    success: function (alunos) {
                        var tabela = $('#tabelaAlunos tbody');
                        tabela.empty();

                    
                        alunos.forEach(function (aluno) {
                            tabela.append('<tr><td>' + aluno.nome + '</td><td>' + aluno.identificacao + '</td></tr>');
                        });
                    },
                    error: function () {
                        console.log('Ocorreu um erro ao carregar os alunos.');
                        var tabela = $('#tabelaAlunos tbody');
                        tabela.empty();
                        tabela.append('<tr><td>OCORREU UM ERRO</td></tr>');
                    }
                });
            });
        });


    </script>
    
}
